<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit sale order form view to add Twilio sms button-->
    <record id="crm_lead_view_form_twilio" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.odoo.twilio.sms</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_twilio_sms" type="object"
                        string="Send SMS Via Twilio"/>
            </xpath>
        </field>
    </record>
    
