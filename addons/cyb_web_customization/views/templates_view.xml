<odoo>

    <record id="crm_lead_form_inherit_hide_generate_leads" model="ir.ui.view">
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_iap_mine.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_generate_leads']" position="replace">
                <button name="action_generate_leads" type="object" class="o_button_generate_leads"
                        string="Generate Leads" groups="sales_team.group_sale_manager" display="none"
                        invisible="context.get('active_model', 'crm.lead') != 'crm.lead'"/>
            </xpath>
        </field>
    </record>

</odoo>
